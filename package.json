  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "dependencies": {
    "electron-updater": "^4.3.5"
  },
  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "eslint": "^5.15.3",
    "eslint-config-google": "^0.12.0",
    "husky": "^2.3.0"
  }
}
