{
  "name": "bitgesell-wallet",
  "version": "0.8.1",
  "description": "Bitgesell Wallet Electron",
  "license": "Proprietary",
  "author": "epexa",
  "main": "src/main.js",
  "repository": "epexa/bitgesell-wallet-electron",
  "config": {
    "electron_builder_params": "--linux snap AppImage --win nsis portable"
  },
  "scripts": {
    "test": "eslint 'src/*.js'",
    "start": "npm test && electron .",
    "build": "electron-builder $npm_package_config_electron_builder_params",
